- @user ||= current_user
.stats
  %table{:summary => "User stats"}
    %tr
      %td
        %a{:href => "#{following_user_path(@user)}"}
          %span{:id => "following", :class => "stat"} #{@user.following.count} following

      %td
        %a{:href => "#{followers_user_path(@user)}"}
          %span{:id => "following", :class => "stat"}= pluralize(@user.followers.count, "follower")