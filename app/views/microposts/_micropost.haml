%tr
  %td{:class => "micropost"}
    %span{:class => "content"}= micropost.content
    %span{:class => "timestamp"}==Posted #{time_ago_in_words(micropost.created_at)} ago.
  - if current_user?(micropost.user)
    %td= link_to "delete", micropost, :method => :delete, :confirm => "You sure?", :title => micropost.content